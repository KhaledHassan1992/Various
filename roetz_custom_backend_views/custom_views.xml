<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<!-- Wijzigingen Account Move Line view (Filters) -->

        <record id="view_account_move_line_filter_custom" model="ir.ui.view">
            <field name="name">journal.items.filter_custom</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter" />
            <field name="arch" type="xml">
                <xpath expr="//search[@string='Search Journal Items']" position="inside">
                    <filter icon="terp-document-new" string="Debiteuren/Crediteuren" domain="['|',('account_id','ilike','150000'),('account_id','ilike','130000')]"/>
                </xpath>
            </field>
        </record>

<!-- Toon Scheduled date in stock picking tree -->

        <record id="picking_tree_custom" model="ir.ui.view">
            <field name="name">stock.picking.tree_custom</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
               <field name="min_date" position="replace">
                  <field name="min_date"/>
               </field>
            </field>
        </record>

<!-- Toon Vinkjes in Purchase Order Tree -->

        <record id="purchase_order_tree_custom" model="ir.ui.view">
            <field name="name">purchase.order.tree_custom</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
               <field name="amount_total" position="after">
                  <field name="shipped"/>
               </field>
            </field>
        </record>

<!-- Toon Vinkjes in Sales Order Tree -->

        <record id="view_order_tree_custom" model="ir.ui.view">
            <field name="name">sale.view.order.tree_custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
               <field name="user_id" position="after">
                  <field name="section_id"/>
               </field>
               <field name="amount_total" position="after">
                  <field name="shipped"/>
                  <field name="invoice_exists"/>
                  <field name="invoiced_rate"/>
                  <field name="invoiced"/>
               </field>
            </field>
        </record>


<!-- Verberg Invoice type ID in Sales Order Tree -->

        <record id="sale_journal.sale_journal_sale_order_tree_custom" model="ir.ui.view">
            <field name="name">sale_journal.sale_journal_sale_order_tree_custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_journal.sale_journal_sale_order_tree"/>
            <field name="arch" type="xml">
               <field name="invoice_type_id" position="replace"/>
            </field>
        </record>

